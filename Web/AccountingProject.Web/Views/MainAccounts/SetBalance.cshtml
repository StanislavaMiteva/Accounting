@model AccountingProject.Web.ViewModels.GLAccounts.AddAccountBalanceInputModel
@{
    this.ViewData["Title"] = "Set initial balance";
}

<h1 class="mx-auto w-50">@this.ViewData["Title"]</h1>

<form class="mx-auto w-50" method="post">
    <fieldset>
        <div asp-validation-summary="All" class="text-danger"></div>

        <vc:list-main-accounts main-account-id="@Model.MainAccountId" type-of-account="all"></vc:list-main-accounts>
        
        <div class="form-group">
            <label asp-for="AnalyticalAccountId" class="control-label"></label>
            <select class="form-control" asp-for="AnalyticalAccountId">
                <option value="@Model.AnalyticalAccountId">@Model.AnalyticalAccountName</option>
            </select>
            <span asp-validation-for="AnalyticalAccountId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DebitBalance" class="control-label"></label>
            <input asp-for="DebitBalance" class="form-control" />
            <span asp-validation-for="DebitBalance" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreditBalance" class="control-label"></label>
            <input asp-for="CreditBalance" class="form-control" />
            <span asp-validation-for="CreditBalance" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-primary text-white mb-3">Set</button>
        </div>
    </fieldset>
</form>

@section Scripts {    
    <script src="~/js/loadAnalyticalAccounts.js"></script>>
}

