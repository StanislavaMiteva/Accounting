@model AccountingProject.Web.ViewModels.GLAccounts.TrialBalanceAccountsListViewModel
@{
    this.ViewData["Title"] = "Trial Balance";
}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header text-center">
                    <h2 id="tables">Trial Balance for period @Model.DateStart - @Model.DateEnd </h2>
                </div>
                <div class="component">
                    <table class="table table-hover table-striped table-responsive table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Code</th>
                                <th scope="col">Name</th>
                                <th scope="col">Debit Balance</th>
                                <th scope="col">Credit Balance</th>
                                <th scope="col">Debit Turnover</th>
                                <th scope="col">Credit Turnover</th>
                                <th scope="col">Debit Balance</th>
                                <th scope="col">Credit Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model.MainAccounts)
                            {
                    <tr class="table-light">
                        <th scope="row">@account.Code</th>
                        <td>@account.Name</td>
                        <td class="text-right">@account.StartDebitBalance</td>
                        <td class="text-right">@account.StartCreditBalance</td>
                        <td class="text-right">@account.DebitTurnoverForPeriod</td>
                        <td class="text-right">@account.CreditTurnoverForPeriod</td>
                        <td class="text-right">@account.EndDebitBalance</td>
                        <td class="text-right">@account.EndCreditBalance</td>
                    </tr>
                    }                            
                        </tbody>
                        <thead>
                            <tr>
                                <th scope="row">Total</th>
                                <th scope="row"></th>
                                <th class="text-right" scope="row">@Model.StartDebitBalanceTotal</th>
                                <th class="text-right" scope="row">@Model.StartCreditBalanceTotal</th>
                                <th class="text-right" scope="row">@Model.DebitTurnoverTotal</th>
                                <th class="text-right" scope="row">@Model.CreditTurnoverTotal</th>
                                <th class="text-right" scope="row">@Model.EndDebitBalanceTotal</th>
                                <th class="text-right" scope="row">@Model.EndCreditBalanceTotal</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
