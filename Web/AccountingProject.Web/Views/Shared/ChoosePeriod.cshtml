@model AccountingProject.Web.ViewModels.Shared.InputYearMonthModel
@{
    this.ViewData["Title"] = "Choose a period";    
}

<h1 class="mx-auto w-50">@this.ViewData["Title"]</h1>

<form class="mx-auto w-50" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonthStart"></label>
        <input asp-for="MonthStart" class="form-control" />
        <span asp-validation-for="MonthStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MonthEnd"></label>
        <input asp-for="MonthEnd" class="form-control" />
        <span asp-validation-for="MonthEnd" class="text-danger"></span>
    </div>    
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Report</button>
    </div>
</form>