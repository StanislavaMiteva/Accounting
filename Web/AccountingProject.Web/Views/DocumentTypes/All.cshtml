@model AccountingProject.Web.ViewModels.DocumentTypes.DocumentTypesListViewModel
@{ this.ViewData["Title"] = "All Document Types:"; }

@if (this.TempData.ContainsKey("Message"))
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @this.TempData["Message"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}

<h2 class="mx-auto w-50">@this.ViewData["Title"]</h2>
<div class="col-md-10">
    <div class="page-header text-center">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var documentType in this.Model.DocumentTypes)
                {
    <tr class="table-light">
        <td>@documentType.Name</td>
        <td>
            <a class="btn btn-block btn-warning text-white mb-3" asp-controller="DocumentTypes" asp-action="Edit" asp-route-id="@documentType.Id">Edit</a>            
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>




