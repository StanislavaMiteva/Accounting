@model AccountingProject.Web.ViewModels.Inventories.EditInventoryInputModel
@{
    this.ViewData["Title"] = "Edit an Inventory";
}

<h1 class="mx-auto w-50">@this.ViewData["Title"]</h1>

<form class="mx-auto w-50" method="post" id="editForm">
    <partial name="_InventoryInputViewModelPartial" model="Model" />
    <vc:list-main-accounts main-account-id="@Model.MainAccountId" type-of-account="inventory" ></vc:list-main-accounts>   
    <hr />
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Save changes</button>
    </div>
</form>


